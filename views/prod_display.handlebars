<div class="row">
    <div class="col-md-7">
        <div>
            <img class="center" src="{{image}}" id="gift_image"></img>
        </div>
    </div>
    <div class="col-md-5">
        <div class="row">
            <div class="col-md-12">
                <div>
                    <h2 id="gift_name">{{title}}</h2>
                    <p class="disprice">{{price}}</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 offset-2">
                <div>
                    <a target="_blank" href="{{link}}" class="btn btn-success btn-raised">Buy on Amazon!</a>
                    <button class="btn btn-default">Search again...</button>
                </div>
            </div>
        </div>

    </div>
</div>


